<% content_for :breadcrumb do %>
  <!--------------------
  START - Breadcrumbs
  -------------------->
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <span>
        <a href="<%= root_path %>"> home</a> /
        <a href="<%= projects_path %> "> project </a> /
        <a href="<%= project_path %>"> show </a>/
        <a href="<%= tasks_path %> "> task </a> /
        <a href="<%= task_path %>"> show </a>/
        <a href="<%= notes_path %> "> note </a> /
        show
      </span>
    </li>
  </ul>
  <!--------------------
  END - Breadcrumbs
  -------------------->
<% end %>
<div class="text-center">
  <div class="row">
    <div class="col-sm-6" style="margin-left: 312px;">
      <div class="element-wrapper">
        <h3 class="element-header">
          <i class="os-icon os-icon-eye"></i>
          Note Show
          <p id="notice"><%= notice %></p>
        </h3>

        <div class="element-box text-center">
          <h5 class="form-header">
            Hii <%= @note.user_id %>. Welcome in PM by Abhi.
          </h5>
          <div class="form-desc">
             Welcome in PM by Abhi.
          </div>
          <div class="text-right">
            <div class="btn btn-light btn-outline-dark">
              <%= link_to 'Edit', edit_project_task_note_path(@project, @task, @note) %>
            </div>
            <div class="btn btn-light btn-outline-dark">
              <%= link_to '<< Back', project_task_path(@project, @task) %>
            </div>
          </div>
          <br>
          <br>
          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>Task</strong></label>
            <div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class=" form-control">
                <strong><%= @note.task_id %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>Body</strong></label>
            <div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class=" form-control">
                <strong><%= @note.body %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>user</strong></label>
            <div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class=" form-control">
                <strong><%= @note.user_id %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
