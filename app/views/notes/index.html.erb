<% content_for :breadcrumb do %>
  <!--------------------
  START - Breadcrumbs
  -------------------->
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <span>
        <a href="<%= root_path %>"> home</a> /
        Notes
      </span>
    </li>
  </ul>
  <!--------------------
  END - Breadcrumbs
  -------------------->
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="element-wrapper">
      <p id="notice"><%= notice %></p>
      <h6 class="element-header">
        <b>Notes</b>
      </h6>
      <h3 class="text-right">
        <div class="btn btn-light btn-outline-dark">
          <%= link_to 'New Note', new_note_path %>
        </div>
      </h3>
      <div class="element-box">
        <h3>Search:</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Task</th>
              <th>Body</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @notes.each do |note| %>
              <tr>
                <td><%= link_to note.task.title, note.task %></td>
                <td><%= note.body %></td>
                <td><%= link_to note.user.name, note.user %></td>
                <td><%= link_to '', note, class:"os-icon os-icon-grid-10" %></td>
                <td><%= link_to '', edit_note_path(note), class:"os-icon os-icon-ui-49" %></td>
                <td><%= link_to '', note, method: :delete, data: { confirm: 'Are you sure?' }, class:"os-icon os-icon-ui-15", style:"color: darkred;" %></td>
              </tr>
              <% end %>
          </tbody>
        </table>
        <br>
        <%= paginate @notes %>
        <%= page_entries_info @notes %>
      </div>
    </div>
  </div>
</div>
