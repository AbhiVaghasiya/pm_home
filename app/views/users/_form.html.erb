<div class="row">
  <div class="col-sm-6" style="margin-left: 312px;">
    <div class="element-wrapper">
      <div class="element-box">
      <%= form_with(model: user, local: true) do |form| %>

        <div class="field">
          <div class="form-group row">
            <div class="col-sm-4 ">
              <label class="col-form-label" for=""> <strong>  <%= form.label :name %> :</strong></label>
            </div>
            <!-- NICHE NA DIV MATHI FORM-CONTROL KADHI NAKHI TO DESIGN MA 2 NAY AAVE -->
            <div class="col-sm-8 form-control">
              <strong><%= form.text_field :name, class: "form-control", placeholder: "Name" %></strong>
            </div>
            <% if user.errors.any? %>
            <div class="col-sm-8 form-control">
              <%= user.errors.messages[:name].join(', ') %>
            </div>
            <% end %>
          </div>
        </div>

        <div class="field">
          <div class="form-group row">
            <div class="col-sm-4 ">
              <label class="col-form-label" for=""> <strong>  <%= form.label :mobile %> :</strong></label>
            </div>
            <!-- NICHE NA DIV MATHI FORM-CONTROL KADHI NAKHI TO DESIGN MA 2 NAY AAVE -->
            <div class="col-sm-8 form-control">
              <strong><%= form.text_field :mobile, class: "form-control", placeholder: "Mobile" %></strong>
            </div>
            <% if user.errors.any? %>
            <div class="col-sm-8 form-control">
              <%= user.errors.messages[:mobile].join(', ') %>
            </div>
            <% end %>
          </div>
        </div>

        <div class="field">
          <div class="form-group row">
            <div class="col-sm-4 ">
              <label class="col-form-label" for=""> <strong> <%= form.label :country %> :</strong></label>
            </div>
            <!-- NICHE NA DIV MATHI FORM-CONTROL KADHI NAKHI TO DESIGN MA 2 NAY AAVE -->
            <div class="col-sm-8 form-control">
              <strong>
                <%= form.text_field :country, class: "form-control", placeholder: "Country" %>
              </strong>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="form-group row">
            <div class="col-sm-4 ">
              <label class="col-form-label" for=""> <strong> <%= form.label :state %> :</strong></label>
            </div>
            <!-- NICHE NA DIV MATHI FORM-CONTROL KADHI NAKHI TO DESIGN MA 2 NAY AAVE -->
