              <strong><%= form.text_field :email, class: "form-control", placeholder: "E-mail" %></strong>
            </div>
            <% if user.errors.any? %>
            <div class="col-sm-8 form-control">
              <%= user.errors.messages[:email].join(', ') %>
            </div>
            <% end %>
          </div>
        </div>

        <div class="field">
          <div class="form-group row">
            <div class="col-sm-4 ">
              <label class="col-form-label" for=""> <strong> <%= form.label :role %> :</strong></label>
            </div>
            <!-- NICHE NA DIV MATHI FORM-CONTROL KADHI NAKHI TO DESIGN MA 2 NAY AAVE -->
            <div class="col-sm-8 form-control">
              <strong>
                <%# <%= form.text_field :role, class: "form-control", placeholder: "Role" %>
                <%= form.select(:role,  raw('<option>Admin</option>,<option>Devloper</option>'), { prompt: '-- Select --'},class: "form-control") %>
              </strong>
            </div>
            <% if user.errors.any? %>
            <div class="col-sm-8 form-control">
              <%= user.errors.messages[:role].join(', ') %>
            </div>
            <% end %>
          </div>
        </div>

        <br>
