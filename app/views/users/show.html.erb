<% content_for :breadcrumb do %>
  <!--------------------
  START - Breadcrumbs
  -------------------->
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <span>
        <a href="<%= root_path %>"> home</a> /
        <a href="<%= users_path %> "> user </a> /
        show
      </span>
    </li>
  </ul>
  <!--------------------
  END - Breadcrumbs
  -------------------->
<% end %>
<div class="text-center">
  <div class="row">
     <div class="col-sm-6 col-sm-offset-3" style="margin-left: 312px;">
      <div class="element-wrapper">
        <h3 class="element-header">
          <i class="os-icon os-icon-user-male-circle""></i> User Show
          <p id="notice"><%= notice %></p>
        </h3>

        <div class="element-box">
          <h5 class="form-header">
            Hii <%= @user.name %>. Welcome in PM by Abhi.
          </h5>
          <div class="form-desc">
          </div>
          <div class="text-right">
            <div class="btn btn-light btn-outline-dark">
              <%= link_to 'Edit', edit_user_path(@user) %>
            </div>
            <div class="btn btn-light btn-outline-dark">
              <%= link_to '<< Back', users_path %>
            </div>
          </div>
          <br>
          <br>



          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control" style="border-left-width: 10px;"> <strong>Name</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control" >
                <strong><%= @user.name %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>Mobile</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.mobile %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>Country</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.country %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"> <strong>State</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.state %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"><strong>City</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.city %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"><strong>Gender</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.gender %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"><strong>Email</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.email %></strong>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-4 form-control">
              <label class="col-form form-control"  style="border-left-width: 10px;"><strong>Role</strong></label>
            </div>
              <i class="col-sm-1 os-icon os-icon-chevrons-right" style="padding-top: 20px;"></i>
            <div class="col-sm-7 form-control">
              <div class="form-control">
                <strong><%= @user.role %></strong>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
