<% content_for :breadcrumb do %>
  <!--------------------
  START - Breadcrumbs
  -------------------->
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <span>
        <a href="<%= root_path %>"> home</a> /
        <a href="<%= projects_path %>"> project </a> project/
        <a href="<%= project_path %>"> Show </a> show/
        <a href="<%= tasks_path %>"> task </a> task/
        new
      </span>
    </li>
  </ul>
  <!--------------------
  END - Breadcrumbs
  -------------------->
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="element-wrapper">
      <h2 class="element-header col-sm-6" style="margin-left: 312px;">
        <i class="os-icon os-icon-plus-circle"></i>
          New Task
        </div>
        <p id="notice"><%= notice %></p>
      <h3 class="text-right col-sm-6" style="margin-left: 312px;">
        <div class="btn btn-light btn-outline-dark">
          <%= link_to '<< Back', project_path(@project) %>
        </div>
      </h3>
      <%= render 'form', task: @task %>
    </div>
  </div>
</div>
